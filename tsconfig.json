{
  "compilerOptions": {
    "module": "commonjs",
    "jsx": "react",
    "jsxFactory": "React.createElement",
    "esModuleInterop": true,
    "sourceMap": true,
    "allowJs": true,
    "lib": [
      "es6",
      "dom"
    ],
    "rootDir": "src",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "types": ["jest", "cypress"]
  },
  "include": [
    "**/*.ts"
  ]
}
